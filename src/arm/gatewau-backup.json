{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationName": {
            "type": "string"
        },
        "environmentName": {
            "type": "string"
        }
    },
    "functions": [
    ],
    "variables": {
        "baseName": "[tolower(concat(parameters('applicationName'), '-', parameters('environmentName')))]",
        "resourceNames": {
            "publicIpName": "[concat(variables('baseName'), '-pip')]"
        },
        "applicationGateway": {
            "name": "",
            "resourceId": "[resourceId('Microsoft.Network/applicationGateways', variables('applicationGateway').name)]",
            "componentNames": {
                "frontEndConfig": "",
                "httpListener": "",
                "frontEndPort": "",
                "backendPool": ""
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('resourceNames').publicIpName]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Network/applicationGateways",
            "name": "[variables('applicationGateway').name]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "WAF_Medium",
                    "tier": "WAF",
                    "capacity": 2
                },
                "frontendIPConfigurations": [
                    {
                        "name": "[variables('applicationGateway').componentNames.frontEndConfig]",
                        "type": "Microsoft.Network/applicationGateways/frontendIPConfigurations",
                        "properties": {
                            "httpListeners": [
                                {
                                    "id": "[concat(variables('applicationGateway').resourceId, '/httpListeners/', variables('applicationGateway').componentNames.httpListener)]"
                                }
                            ]
                        }
                    }
                ],
                "frontendPorts": [
                    {
                        "name": "[variables('applicationGateway').componentNames.frontEndPort]",
                        "properties": {
                            "port": 443,
                            "httpListeners": [
                                {
                                    "id": "[concat(variables('applicationGateway').resourceId, '/httpListeners/', variables('applicationGateway').componentNames.httpListener)]"
                                }
                            ]
                        },
                        "type": "Microsoft.Network/applicationGateways/frontendPorts"
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('applicationGateway').componentNames.backendPool]",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "backendAddresses": [
                                {
                                    "fqdn": "[variables('apiManagementGatewayFullHostName')]"
                                }
                            ],
                            "requestRoutingRules": [
                                {
                                    "id": "[concat(variables('applicationGatewayId'), '/requestRoutingRules/', variables('applicationGatewayRequestRoutingRuleName'))]"
                                }
                            ]
                        },
                        "type": "Microsoft.Network/applicationGateways/backendAddressPools"
                    }
                ]
            }
        }
    ],
    "outputs": {
    }
}
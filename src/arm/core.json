{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationName": {
            "type": "string",
            "defaultValue": "gateway"
        },
        "environmentName": {
            "type": "string"
        },
        "vnetAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Base subnet address prefix"
            },
            "defaultValue": "192.168.64.0/18"
        },
        "serviceSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Service subnet name"
            },
            "defaultValue": "gateway"
        },
        "serviceSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "Service subnet address prefix"
            },
            "defaultValue": "192.168.97.0/27"
        }
    },
    "functions": [
    ],
    "variables": {
        "baseName": "[tolower(concat(parameters('applicationName'), '-', parameters('environmentName')))]",
        "resourceNames": {
            "vnetName": "[concat(variables('baseName'), '-vnet')]"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('resourceNames').vnetName]",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "VNET",
                "Created By": "Apollo-Dev-Team",
                "Resource": "global"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('serviceSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('serviceSubnetPrefix')]"
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        }
    ]
}